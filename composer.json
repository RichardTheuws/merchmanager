{
  "name": "metalbc/merchmanager",
  "description": "A comprehensive WordPress plugin for bands and music artists to manage merchandise sales during tours and events.",
  "type": "wordpress-plugin",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Metal Business Club",
      "email": "development@metalbc.com",
      "homepage": "https://metalbc.com"
    }
  ],
  "require": {
    "php": ">=7.4",
    "ext-json": "*",
    "ext-mbstring": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "yoast/phpunit-polyfills": "^1.0",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^2.3",
    "dealerdirect/phpcodesniffer-composer-installer": "^0.7.2",
    "lucatume/wp-browser": "^3.1",
    "codeception/module-asserts": "^1.3",
    "codeception/module-db": "^1.1",
    "codeception/module-webdriver": "^1.4"
  },
  "autoload": {
    "psr-4": {
      "Merchmanager\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Merchmanager\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "test:coverage": "phpunit --coverage-html coverage",
    "lint": "phpcs --standard=WordPress --extensions=php --ignore=*/vendor/* --colors -p .",
    "lint:fix": "phpcbf --standard=WordPress --extensions=php --ignore=*/vendor/* .",
    "check:security": "security-checker security:check",
    "build": [
      "@lint",
      "@test"
    ],
    "post-install-cmd": [
      "php -r \"copy('vendor/wp-coding-standards/wpcs/WordPress', 'phpcs.xml');\""
    ]
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true
  },
  "extra": {
    "wordpress-install-dir": "wp",
    "installer-paths": {
      "vendor/{$vendor}/{$name}/": ["type:wordpress-plugin"]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}